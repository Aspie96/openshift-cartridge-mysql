#!/bin/bash

source $OPENSHIFT_CARTRIDGE_SDK_BASH

# Download
curl -L -o ${OPENSHIFT_DATA_DIR}tmp.tgz http://dev.mysql.com/get/Downloads/mysql-${2}-rc-linux-glibc2.5-x86_64.tar.gz

# Create bin directory if necessary
mkdir -p ${OPENSHIFT_DATA_DIR}.mysql

# Copy just the mecessary files
tar -xvzf ${OPENSHIFT_DATA_DIR}tmp.tgz --strip-components=1 -C ${OPENSHIFT_DATA_DIR}.mysql mysql-${2}-rc-linux-glibc2.5-x86_64/bin/{mysql,mysqld,mysql_install_db,mysql_ssl_rsa_setup}
tar -xvzf ${OPENSHIFT_DATA_DIR}tmp.tgz --strip-components=1 -C ${OPENSHIFT_DATA_DIR}.mysql mysql-${2}-rc-linux-glibc2.5-x86_64/share

# Remove downloaded archive
rm ${OPENSHIFT_DATA_DIR}tmp.tgz

echo "
[mysqld_safe]
ledir = ${OPENSHIFT_DATA_DIR}.mysql/bin

[mysqld]
socket = ${TMP}/mysql.sock
basedir = ${OPENSHIFT_DATA_DIR}.mysql
datadir = ${OPENSHIFT_DATA_DIR}.mysql/data
tmpdir = ${TMP}
pid-file = ${TMP}/mysql.pid
log-error = ${OPENSHIFT_LOG_DIR}/mysql.err
" > ${OPENSHIFT_DATA_DIR}.mysql/my.cnf

# Create internal database
cd ${OPENSHIFT_DATA_DIR}.mysql
./bin/mysql_install_db --defaults-file=${OPENSHIFT_DATA_DIR}.mysql/my.cnf --datadir=${OPENSHIFT_DATA_DIR}.mysql/data

# Remove temporary tools
rm ${OPENSHIFT_DATA_DIR}.mysql/bin/{mysql_install_db,mysql_ssl_rsa_setup}

# Start server in "admin mode"
${OPENSHIFT_DATA_DIR}.mysql/bin/mysqld               \
  --defaults-file=${OPENSHIFT_DATA_DIR}.mysql/my.cnf \
  --skip-grant-tables --skip-networking &

# Change root password
echo "FLUSH PRIVILEGES; ALTER USER 'root'@'localhost' IDENTIFIED BY 'root';" | ${OPENSHIFT_DATA_DIR}.mysql/bin/mysql --socket=socket = ${TMP}/mysql.sock

# Stop server
kill "$(ps -ef | grep 'mysqld' | grep -v grep | awk '{ print $2 }')" > /dev/null 2>&1
while [ ! -z "$(ps -ef | grep 'mysqld' | grep -v grep)" ] && [ $i -lt 60 ]; do
  sleep 1
  i=$(($i + 1))
done

# Add DB_HOST and DB_PORT environment variables
if [ -z "$OPENSHIFT_MYSQL_PROXY_PORT" ]; then
  # Since $OPENSHIFT_MYSQL_PROXY_PORT is missing, cartridge must be running in the main gear
  echo "$OPENSHIFT_MYSQL_DB_HOST" > $OPENSHIFT_MYSQL_DIR/env/DB_HOST
  echo "$OPENSHIFT_MYSQL_DB_PORT" > $OPENSHIFT_MYSQL_DIR/env/DB_PORT
else
  # Found $OPENSHIFT_MYSQL_PROXY_PORT, the cartridge is running in a separate gear
  echo "$OPENSHIFT_GEAR_DNS" > $OPENSHIFT_MYSQL_DIR/env/DB_HOST
  echo "$OPENSHIFT_MYSQL_DB_PROXY_PORT" > $OPENSHIFT_MYSQL_DIR/env/DB_PORT
fi

# Output result
client_result "MySQL ${2} installed. Initial root password is 'root', make sure to change it. Use \$DB_HOST and \$DB_PORT environment variables to connect your application."
